<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_inventario"
        android:layout_width="116dp"
        android:layout_height="0dp"
        android:layout_marginBottom="42dp"
        android:text="@string/txt_inventario"
        app:layout_constraintBottom_toTopOf="@+id/bt_pokemon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:text="Pokemon" />

    <Button
        android:id="@+id/bt_pokemon"
        android:layout_width="121dp"
        android:layout_height="0dp"
        android:layout_marginBottom="329dp"
        android:text="@string/txt_pokemon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_inventario"
        tools:text="Inventario" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="392dp"
        android:layout_height="221dp"
        android:layout_marginBottom="65dp"
        app:layout_constraintBottom_toTopOf="@+id/bt_inventario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banner" />

</androidx.constraintlayout.widget.ConstraintLayout>