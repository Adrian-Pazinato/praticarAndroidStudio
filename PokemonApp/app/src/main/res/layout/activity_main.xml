<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start|center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TextoTopo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:fontFamily="monospace"
        android:includeFontPadding="true"
        android:text="Gerenciador de Pokemon"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="26sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPokemon1"
            android:layout_width="331dp"
            android:layout_height="190dp"
            android:layout_weight="0.5"
            android:background="@drawable/button_border"
            android:drawableStart="@drawable/sandshrew_icon"
            android:drawablePadding="8dp"
            android:scaleType="fitCenter"
            android:text="Sandshrew"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnPokemon2"
            android:layout_width="331dp"
            android:layout_height="190dp"
            android:layout_weight="0.5"
            android:background="@drawable/button_border"
            android:drawableStart="@drawable/scizor_icon"
            android:drawablePadding="8dp"
            android:scaleType="fitCenter"
            android:text="Scizor"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:layout_width="412dp"
        android:layout_height="80dp"
        android:textAlignment="center"
        android:text="InventÃ¡rio" />

</LinearLayout>
